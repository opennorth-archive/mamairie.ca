%ul.unstyled.icons
  - if entity.twitter
    %li
      = link_to image_tag('blank.gif', size: '25x25', alt: 'Twitter', title: 'Twitter'), entity.twitter_url, class: 'twitter'
  - if entity.facebook
    %li
      = link_to image_tag('blank.gif', size: '25x25', alt: 'Facebook', title: 'Facebook'), entity.facebook, class: 'facebook'
  - if entity.youtube
    %li
      = link_to image_tag('blank.gif', size: '25x25', alt: 'YouTube', title: 'YouTube'), entity.youtube, class: 'youtube'
  - if entity.flickr
    %li
      = link_to image_tag('blank.gif', size: '25x25', alt: 'Flickr', title: 'Flickr'), entity.flickr, class: 'flickr'
  - if entity.wikipedia_url
    %li
      = link_to image_tag('blank.gif', size: '25x25', alt: 'Wikipédia', title: 'Wikipédia'), entity.wikipedia_url, class: 'wikipedia'
- if entity.twitter
  = link_to t('social.twitter', name: entity.twitter), entity.twitter_url, :class => 'twitter-follow-button', 'data-lang' => locale
