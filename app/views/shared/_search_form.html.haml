= form_tag search_path, method: :get, class: 'form-inline' do
  %fieldset
    = label_tag :q, t('search.label'), class: 'control-label'
    = text_field_tag :q, params[:q], placeholder: t('search.placeholder'), class: 'large'
    = submit_tag t('search.submit'), class: 'btn btn-primary btn-large'
    %span.help-block
      %strong= t('search.example_label')
      = link_to 'H2L 4L8', search_path(q: t('search.example'))
