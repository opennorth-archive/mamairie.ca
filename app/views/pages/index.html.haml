- content_for(:head){auto_discovery_link_tag :atom, feed_url(format: 'atom')}
.container
  .row
    .span16
      %h2#tagline Suivez l'activité de vos élus à la Ville de Montréal
      - if flash.alert
        .alert-message.error.fade.in
          %a.close(href="#") ×
          %p
            = flash.alert
      .hero-unit
        = render 'shared/search_form'
      .newsletter
        %p Nous allon ajouter plusieurs nouvelles fonctionalités dans les prochaines semaines.
        %p Inscrivez votre adresse courriel pour être avisé de mises à jour.
        %form(action="http://opennorth.us2.list-manage.com/subscribe/post?u=a602fac79ef3dc584bf1a2743&id=bd133c7a86" method="post")
          <label for="mce-EMAIL">Courriel</label>
          <input type="text" value="" name="EMAIL" id="mce-EMAIL" />
          <input type="submit" class="btn" value="Inscrivez-moi!" />
  .row
    .span7#activities
      %span.icons
        = link_to image_tag('blank.gif', size: '25x25', alt: "S'abonner au flux RSS", title: "S'abonner au flux RSS"), feed_path(format: 'atom'), class: 'rss'
      %ul.unstyled
        - @activities.each do |activity|
          %li
            = render "shared/#{activity.source}", activity: activity
    .span9
      .well
        %h2 Arrondissements
        .row#boroughs
          - @boroughs.in_two.each do |boroughs|
            .span4
              %ul.unstyled
                - boroughs.each do |borough|
                  %li
                    = link_to borough.name, borough_path(id: borough.slug)
        %h2 Élus
        .row#people
          - @people.in_two.each do |people|
            .span4
              %ul.unstyled
                - people.each do |person|
                  %li
                    = link_to image_tag(person.photo.thumb.url, size: '48x48', alt: ''), person_path(id: person.slug)
                    .person
                      .name
                        = link_to person.name, person_path(id: person.slug)
                        %abbr.label(class="#{person.party_slug}" title="#{person.party_name}")= person.party_slug.first.upcase
                      .borough
                        = person.borough.short_name || person.borough_name
                      .position
                        = person.district_id ? person.district_name : person.positions.first
